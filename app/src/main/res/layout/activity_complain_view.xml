                            android:layout_width="0dp"
                            android:layout_weight="0.46"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif"
                            android:textColor="#000000"
                            android:textStyle="bold"
