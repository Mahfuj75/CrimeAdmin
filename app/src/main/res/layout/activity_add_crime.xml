<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_add_complain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.onenation.oneworld.mahfuj75.crimeadmin.activity.AddCrimeActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E0E0E0"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="9dp"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="0dp"
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:textSize="17sp"
                    android:text="Criminal Information" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:background="#FFFFFF">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:textSize="17sp"
                            android:id="@+id/addMissingPersonImageView"
                            android:layout_width="170dp"
                            android:layout_height="100dp"
                            android:layout_gravity="left"
                            android:src="@drawable/add_image"
                            android:layout_weight="1" />

                        <Button
                            android:fontFamily="serif"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add Image"
                            android:theme="@style/ButtonStyle"
                            android:textAllCaps="false"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:id="@+id/addMissingPersonImageButton" />

                    </LinearLayout>

                    <RadioGroup
                        android:paddingTop="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:fontFamily="serif"
                            android:textSize="17sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hapticFeedbackEnabled="true"
                            android:theme="@style/MyRadioButton"
                            android:textAllCaps="false"
                            android:text="male" />

                        <RadioButton
                            android:textSize="17sp"
                            android:fontFamily="serif"
                            android:id="@+id/radioButton_complain_female"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hapticFeedbackEnabled="true"
                            android:theme="@style/MyRadioButton"
                            android:textAllCaps="false"
                            android:text="female" />

                    </RadioGroup>
                    <TextView
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:text="Last Seen"
                        android:textStyle="bold"
                        android:textColor="#424242"
                        android:textSize="17sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorAccent">

                    </View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#FFFFFF">

                        <TextView
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:fontFamily="serif"
                            android:text="Location"
                            android:textStyle="bold"
                            android:textColor="@color/colorGreen"
                            android:textSize="17sp" />

                        <TextView
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:fontFamily="serif"
                            android:text="Sub-Location"
                            android:textStyle="bold"
                            android:textColor="@color/colorGreen"
                            android:textSize="17sp"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorAccent">

                    </View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Spinner
                            android:textSize="17sp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:spinnerMode="dialog"
                            android:layout_height="wrap_content">

                        </Spinner>

                        <Spinner
                            android:textSize="17sp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:spinnerMode="dialog"
                            android:layout_height="wrap_content">

                        </Spinner>

                    </LinearLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:fontFamily="serif"
                            android:textSize="17sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="name"
                            android:inputType="textCapWords"
                            android:lines="1" />
                    </android.support.design.widget.TextInputLayout>



                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:fontFamily="serif"
                            android:textSize="17sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="national ID / birth-certificate ID"
                            android:inputType="numberSigned"
                            android:lines="1"
                            android:id="@+id/editText" />
                    </android.support.design.widget.TextInputLayout>



                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E0E0E0"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="-5dp"
                    android:layout_marginRight="-5dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:textSize="17sp"
                    android:text="Crime Full Description" />


                <LinearLayout
                    android:background="#FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:fontFamily="serif"
                            android:textSize="17sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="GD Number"
                            android:inputType="numberSigned"
                            android:lines="1" />
                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:paddingTop="15dp"
                        android:paddingBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Crime Subject"
                        android:textStyle="bold"
                        android:fontFamily="serif"
                        android:textColor="#424242"
                        android:textSize="17sp"
                        android:id="@+id/textView2" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#BDBDBD">

                    </View>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Spinner
                            android:textSize="17sp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:spinnerMode="dialog"
                            android:layout_height="wrap_content">

                        </Spinner>
                        <Spinner
                            android:textSize="17sp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:spinnerMode="dialog"
                            android:layout_height="wrap_content">

                        </Spinner>

                    </LinearLayout>



                    <TextView
                        android:paddingTop="15dp"
                        android:paddingBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Crime Date"
                        android:textStyle="bold"
                        android:fontFamily="serif"
                        android:textColor="#424242"
                        android:textSize="17sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#BDBDBD">

                    </View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView

                            android:paddingLeft="10dp"
                            android:paddingRight="0dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="serif"
                            android:text="DD / MM / YYYY"
                            android:textAlignment="center"
                            android:textColor="#616161"
                            android:textSize="17sp"
                            android:id="@+id/textView_complain_incidentDate" />

                        <Button
                            android:fontFamily="serif"
                            android:layout_weight=".7"
                            android:theme="@style/ButtonStyle4"
                            android:text="Date"
                            android:textAllCaps="false"
                            android:textSize="17sp"
                            android:id="@+id/button_complain_incidentDate"
                            android:textAlignment="center"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />


                    </LinearLayout>




                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:textColor="#424242"
                            android:fontFamily="serif"
                            android:textSize="17sp"
                            android:id="@+id/editText_complain_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="crime description"
                            android:minLines="6"
                            android:maxLines="8"
                            android:gravity="top|left"
                            android:inputType="textMultiLine" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E0E0E0"
                android:orientation="vertical">

                <TextView
                    android:layout_marginLeft="-5dp"
                    android:layout_marginRight="-5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:textSize="17sp"
                    android:text="Crime Spot" />

                <LinearLayout
                    android:background="#FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp">



                    <TextView
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:text="Location"
                        android:textStyle="bold"
                        android:textColor="#424242"
                        android:textSize="17sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorAccent">

                    </View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#FFFFFF">

                        <TextView
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:fontFamily="serif"
                            android:text="Location"
                            android:textStyle="bold"
                            android:textColor="@color/colorGreen"
                            android:textSize="17sp"
                            android:id="@+id/textView" />

                        <TextView
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:fontFamily="serif"
                            android:text="Sub-Location"
                            android:textStyle="bold"
                            android:textColor="@color/colorGreen"
                            android:textSize="17sp"
                            android:id="@+id/textView_complain_district" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorAccent">

                    </View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/spinner_complain_division"
                            android:textSize="17sp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:spinnerMode="dialog"
                            android:layout_height="wrap_content">

                        </Spinner>

                        <Spinner
                            android:id="@+id/spinner_complain_district"
                            android:textSize="17sp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:spinnerMode="dialog"
                            android:layout_height="wrap_content">

                        </Spinner>

                    </LinearLayout>




                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:fontFamily="serif"
                            android:textSize="17sp"
                            android:id="@+id/editText_complain_spot_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="incident spot description"
                            android:minLines="4"
                            android:maxLines="6"
                            android:gravity="top|left"
                            android:inputType="textMultiLine" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

            </LinearLayout>


            <Button
                android:fontFamily="serif"
                android:id="@+id/button_complain_submit"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:theme="@style/ButtonStyle2"
                android:text="Submit" />


        </LinearLayout>

    </ScrollView>
</RelativeLayout>
